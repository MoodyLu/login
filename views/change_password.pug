extends layout.pug
block content
  .container
    .row.justify-content-center
      .col-md-8
        if error
          .alert.alert-warning= error
        if success 
          .alert.alert-success= success
        .card
          .card-header Changepassword
          .card-body
            form.form-horizontal(method='post' action='/changepass')
              .mb-3
                label.form-label.control-label(for='email') E-mail
                input#email.form-control(type='email' name='email' required)
              .mb-3
                label.form-label.control-label(for='password') Password
                input#password.form-control(type='password' name='password' required)
              .mb-3
                label.form-label.control-label(for='new_password') new Password
                input#password.form-control(type='password' name='new_password' required)
              .mb-3.py-3
                button.btn.btn-primary.login-button(type='submit') ChangePassword
                